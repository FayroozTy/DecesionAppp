    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
        android:layout_marginTop="15dp"
            android:padding="6dp">



        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingTop="10dp"
                      android:gravity="right"
                      android:layout_gravity="right"


        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="اطلعت لجنة ادارة بلدية نابلس على القرار رقم (23) بتاريخ 18/9/2021 الخاص بالكشف على المواقع المقترحة لتركيب اجهزة تكييف، حيث تم الكشف على المواقع المطلوب تركيب اجهزة تكييف لها، و التوصية بالموافقة على تركيب الاجهزه عدد (5) واستكمال اجراءات الاحالة على السادة مجموعة السعد الهندسية بقيمة اجمالية قدرها (8500) شيكل والسعر شامل للضريبة المضافة \r\nوقررت الموافقة على التوصية."
                     android:fontFamily="@font/neo_sans_arabic"
                      android:textColor="@android:color/black"
                      android:id="@+id/sub"
                       android:lines="3"
                    android:lineSpacingExtra="6dp"
                     android:textSize="14dp"

            />



        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/neo_sans_arabic"
        android:text="1/10/2021"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/black"
        android:textSize="13dp"

        />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/neo_sans_arabic_bold"
            android:text="تم عقدها"
            android:textColor="@color/black"
            android:textSize="13dp"

            />

    </RelativeLayout>
</RelativeLayout>